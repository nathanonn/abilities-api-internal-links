{
    "name": "internal-links-api/internal-links-api",
    "description": "WordPress plugin for managing internal links via the Abilities API",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "brain/monkey": "^2.6",
        "mockery/mockery": "^1.6"
    },
    "autoload": {
        "psr-4": {
            "InternalLinksAPI\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "InternalLinksAPI\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-html tests/coverage"
    },
    "config": {
        "optimize-autoloader": true
    }
}
